<UserControl x:Class="BlankApp1.Views.Common.EditCategoryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlankApp1.Views.Common"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="1" Command="{Binding Accept}" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding NewName}" VerticalAlignment="Center" Width="120"/>

    </Grid>
</UserControl>
